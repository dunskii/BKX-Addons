{
	"name": "bookingx/bkx-razorpay",
	"description": "Razorpay payment gateway integration for BookingX",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "BookingX",
			"email": "developers@bookingx.com"
		}
	],
	"require": {
		"php": ">=7.4",
		"razorpay/razorpay": "^2.9"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/phpstan": "^1.10"
	},
	"autoload": {
		"psr-4": {
			"BookingX\\Razorpay\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"BookingX\\Razorpay\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpstan": "phpstan analyse",
		"test": "phpunit"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
