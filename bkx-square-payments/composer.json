{
    "name": "bookingx/square-payments",
    "description": "Square payment gateway for BookingX",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Booking X",
            "email": "support@bookingx.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "square/square": "^43.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "BookingX\\SquarePayments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BookingX\\SquarePayments\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress src/",
        "phpstan": "phpstan analyse src/ --level=5",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
