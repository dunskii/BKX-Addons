{
	"name": "bookingx/paypal-pro",
	"description": "PayPal Commerce Platform payment gateway for BookingX",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"version": "1.0.0",
	"require": {
		"php": ">=7.4",
		"composer/installers": "^1.0 || ^2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/phpstan": "^1.10"
	},
	"autoload": {
		"psr-4": {
			"BookingX\\PayPalPro\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"BookingX\\PayPalPro\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"phpcs": "phpcs --standard=WordPress --extensions=php .",
		"phpcbf": "phpcbf --standard=WordPress --extensions=php .",
		"phpstan": "phpstan analyse --level=5 src",
		"test": "phpunit"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
