{
	"name": "bookingx/bkx-rewards-points",
	"description": "Customer loyalty points system for BookingX",
	"type": "wordpress-plugin",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "BookingX",
			"email": "developers@bookingx.com"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/phpstan": "^1.10"
	},
	"autoload": {
		"psr-4": {
			"BookingX\\RewardsPoints\\": "src/"
		}
	},
	"scripts": {
		"phpcs": "phpcs --standard=WordPress src/",
		"phpcbf": "phpcbf --standard=WordPress src/",
		"phpstan": "phpstan analyse src/ --level=6",
		"test": "phpunit"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
