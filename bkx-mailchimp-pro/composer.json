{
  "name": "bookingx/mailchimp-pro",
  "description": "Deep Mailchimp integration for BookingX",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "BookingX",
      "email": "support@bookingx.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "BookingX\\MailchimpPro\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BookingX\\MailchimpPro\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=WordPress src/",
    "phpcbf": "phpcbf --standard=WordPress src/"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../_shared/bkx-addon-sdk"
    }
  ]
}
