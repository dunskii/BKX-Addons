{
	"name": "bookingx/bkx-recurring-bookings",
	"description": "Create recurring booking series with flexible patterns, automatic scheduling, and subscription payments for BookingX.",
	"version": "1.0.0",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "BookingX",
			"email": "dev@bookingx.com",
			"homepage": "https://bookingx.com"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/phpstan": "^1.10",
		"szepeviktor/phpstan-wordpress": "^1.3"
	},
	"autoload": {
		"psr-4": {
			"BookingX\\RecurringBookings\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"BookingX\\RecurringBookings\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"phpcs": "phpcs --standard=WordPress src/",
		"phpcbf": "phpcbf --standard=WordPress src/",
		"phpstan": "phpstan analyse src/ --level=5",
		"test": "phpunit"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
