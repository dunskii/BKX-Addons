{
	"name": "bookingx/fitness-sports",
	"description": "Fitness & Sports Management for BookingX - gyms, trainers, and sports clubs",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Developer",
			"email": "developer@bookingx.com"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/phpstan": "^1.10"
	},
	"autoload": {
		"psr-4": {
			"BookingX\\FitnessSports\\": "src/"
		}
	},
	"scripts": {
		"phpcs": "phpcs --standard=WordPress src/",
		"phpcbf": "phpcbf --standard=WordPress src/",
		"phpstan": "phpstan analyse src/",
		"test": "phpunit"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
